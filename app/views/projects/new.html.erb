<h1>New project</h1>

<% form_for(@project) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </p>
  <p>
      <%= f.label  "Short description" %><br />
    <%= f.text_area :content %>
  </p>
      <p>
        <%= f.label  "Public project?" %><br />
        <%= f.check_box :public %>
      </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', projects_path %>