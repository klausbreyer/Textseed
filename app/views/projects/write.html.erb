<% if @editor  %>
  <div class="error">
    <b>Warning:</b> <%= link_to @editor.login, @editor  %> is allready changing this document since
    <%= german_time @project.edited_at  %>! You can  change the document anyway,
    but we reconmmend to <u><%= link_to "abbandon and return", @project %></u>. Try to load this page again when  <%= link_to @editor.login, @editor  %> finished
    the changes.

  </div>
<% end  %>

<% if @unit.content %>
  <h1>Change the document</h1>
<% else %>
  <h1>Write the document</h1>
<% end %>

<% form_for(@unit, :url => :change_project) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content, :style =>"width:100%;" %>
  </p>
  <%= f.hidden_field :project_id %>
  <p>
    <%= f.submit 'Write' %>
  </p>
<% end %>

<%= link_to 'Back', @unit.project %> | <%= link_to "help", help_path %> for markup