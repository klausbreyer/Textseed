<h1>Users</h1>

<table>
  <tr>
    <th>Login</th>
    <th>Projects</th>
    <th>Writes</th>
    <th>Here since</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to  user.login, user %></td>
    <td><%=h user.projects.length %></td>
    <td><%=h user.units.length %></td>
    <td><%=h distance_of_time_in_words(Time.now, user.created_at) %></td>
    
  </tr>
<% end %>
</table>

