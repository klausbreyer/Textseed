<h1>Listing units</h1>

<table>
  <tr>
    <th>Project</th>
    <th>Content</th>
    <th>Resolv</th>
    <th>User</th>
  </tr>

<% @units.each do |unit| %>
  <tr>
    <td><%=h unit.project_id %></td>
    <td><%=h unit.content %></td>
    <td><%=h unit.resolv %></td>
    <td><%=h unit.user_id %></td>
    <td><%= link_to 'Show', unit %></td>
    <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
    <td><%= link_to 'Destroy', unit, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New unit', new_unit_path %>